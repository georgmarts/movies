.search-container {
  position: relative;
  margin-top: 50px;
}

.movies-container {
  position: relative;
  display: grid;
  grid-template-columns: repeat(auto-fill, 200px);
  justify-content: center;
  gap: 20px;
  margin: 20px auto;
  width: clamp(300px, 90vw, 1900px);
}

.search-loading {
  position: absolute;
  margin: auto;
  inset: 100px 0 0 0;
  font-size: 1rem;
  color: white;
  width: fit-content;
}

.single-movie-container {
  position: relative;
  width: 100%;
  aspect-ratio: 16 / 9;
  /* padding-top: 50%; */
  border-radius: 7px;
  box-shadow: 0 4px 7px rgb(0 0 0 / 25%);
  outline: 1px black solid;
  cursor: pointer;
  transition: all ease-in-out 300ms;
  overflow: hidden;
}

.single-movie-container:hover {
  outline: 1px white solid;
  transform: scale(1.03);
  transition: all ease-in-out 300ms;
}

.single-movie {
  width: 100%;
  height: 100%;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

@media only screen and (max-width: 700px) {
  .search-container {
    margin-top: 100px;
  }
}