  .movie-filter-menu-container {
    position: relative;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: left;
    align-items: center;
    margin: 5px auto;
    min-height: 50px;
    width: clamp(300px, 90vw, 1900px);
    z-index: 1;
  }
  
  .search-bar {
    display: block;
    position: relative;
    height: 28px;
    border: 1px rgba(128, 128, 128, 0.436) solid;
    border-radius: 3px;
  }
  
  .movie-filter-menu, .search-bar-container{
    position: relative;
    margin-top: 25px;
    margin-left: 10px;
  }
  
  .label {
    position: absolute;
    margin: auto;
    top: -17px;
    font-size: 11px;
    margin-left: 0px;
    color: white;
  }
  
  .btn-movies-filter-boss {
    all: unset;
    display: block;
    position: relative;
    width: 100px;
    height: 30px;
    padding-left: 10px;
    border: 1px rgba(255, 255, 255, 0.826) solid;
    border-radius: 3px;
    cursor: pointer;
    color: white;
  }
  
  .btn-movies-filter-boss:hover, .search-bar:hover {
    border: 1px white solid;
  }
  
  .arrow {
    display: block;
    position: absolute;
    float: right;
    margin: auto;
    top: 50%;
    right: 5px;
    opacity: 1;
    transform: translateY(-50%);
    transition: opacity 3s;
    color: grey;
    font-size: 10px;
  }
  
  .dropdown-menu-container {
    display: block;
    position: absolute;
    margin-top: 3px;
    width: 110px;
    max-height: 200px;
    background-color: rgb(232, 231, 231);
    z-index: 2;
  }

  .overflow-scroll {
    overflow-x: hidden;
    overflow-y: scroll;
  }
  
  .btn-movies-filter {
    all: unset;
    display: block;
    height: 30px;
    line-height: 30px;
    width: 100%;
    padding-left: 10%;
    cursor: pointer;
  }
  
  .btn-movies-filter:hover {
    background-color:  rgb(81, 80, 80);
    width: 90%;
    color: white;
  }