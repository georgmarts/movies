.episodes-grid {
    margin: 30px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 10px;
}

.single-episode-container {
    position: relative;
    aspect-ratio: 16 / 9;
    transition: transform 0.5s, filter 0.5s;
    cursor: pointer;
}

.episode-img {
    width: 100%;
    height: 100%;
    border-radius: 10px;
    box-shadow: 0 0 10px -7px silver;
    border: 1px rgba(255, 255, 255, 0) solid;
    transition: all 0.5s;
}

.single-episode-container:hover {
    transform: scale(1.03);
    transition: all 0.5s;
}

.single-episode-container:hover .episode-img {
    border: 1px white solid;
    transition: all 0.5s;
}

.episode-label {
    color: white;
}
