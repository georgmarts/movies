.main-page-banner-container {
    width: 100%;
    aspect-ratio: 16 / 6;
    margin-inline: auto;
    margin-bottom: -100px;
    z-index: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.main-page-banner-info-container {
    position: relative;
    margin-inline: 0 auto;
    display: flex;
    flex-direction: column;
    width: 50vw;
    height: fit-content;
    left: 5%;
    transition: opacity 0.5s;
    color: white;
    line-height: clamp(15px, 4.5vw, 35px);
    font-size: clamp(10px, 3vw, 20px);
}

h1 {
    margin: 0;
}

.main-page-banner-btn-container {
    display: flex;
    gap: 5px;
}

.main-page-banner-btn-container button {
    width: 100px;
    aspect-ratio: 16 / 6;
    border-radius: 3px;
    background-color: white;
    border: none;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.5s;
}

.main-page-banner-btn-container button:hover {
    background-color: red;
    color: white;
    transition: all 0.5s;
}

@media only screen and (max-width: 700px) {
    .main-page-banner-container {
        aspect-ratio: 16 / 7;
        margin-top: 50px !important;
    }

    .main-page-banner-info-container h1 {
        font-size: 25px;
    }

    .main-page-banner-info-container p {
        display: none;
    }
    .main-page-banner-btn-container {
        flex-direction: column;
    }
    .main-page-banner-btn-container button {
        width: 150px;
        height: 35px;
    }
}

@media only screen and (max-width: 1000px) {
    .main-page-banner-info-container p {
        display: none;
    }
}

@media only screen and (max-width: 1100px) {
    .main-page-banner-container {
        margin-bottom: 15px !important;
    }
    .main-page-banner-info-container h1 {
        margin-bottom: 20px;
    }
}

