:root {
    --niceblue: #107ab0;
    --nicebluehover: #0a4765;
  }

.posts-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    width: 700px;
    height: 250px;
    gap: 20px;
    margin: 50px auto;
  }
  
.post-container {
    box-shadow: 0 0 1px 0.5px black;
    padding: 15px;
  }
  
.title {
    margin: 0;
    font-weight: 700;
    font-size: large;
  }
  
.text {
    height: 130px;
  }

.post-btn {
    background-color: #107ab0;
    height: 10px;
    width: 70px;
    padding: 15px;
    color: white;
    border: none;
    font-size: medium;
    line-height: 10px;
    text-decoration: none;
  }
  
.post-btn:hover {
    background-color: var(--nicebluehover);
    cursor: pointer;
}

.pagination-container {
    display: block;
    margin: 0 auto;
    text-align: center;
    width: 300px;
  }
  
  .pagination-btn, .pagination-btn-active, .next-prev, .btn-first, .btn-last {
    height: 30px;
    padding: 10px;
    border: none;
    background-color: white;
    cursor: pointer;
    font-size: medium;
    font-weight: 900;
  }
  
  .pagination-btn-active {
    font-size: 20px;
    color: #107ab0;
  }
  
  .pagination-btn:hover {
    text-decoration: underline;
  }